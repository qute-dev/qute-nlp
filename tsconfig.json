{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2017", "DOM"],
    "outDir": "lib",
    "rootDir": "src",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "types": ["./src/types.d.ts"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
